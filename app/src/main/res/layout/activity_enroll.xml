<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kbasa.teaching.teachers.ViewCourseActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <VideoView
            android:id="@+id/introVideoView"
            android:layout_width="match_parent"
            android:layout_height="300dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:text="Course Name"
            android:textSize="22sp"
            android:textColor="@color/colorPrimary"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:enabled="false"
            android:id="@+id/courseNameTextView"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:text="Course Description"
            android:textSize="22sp"
            android:textColor="@color/colorPrimary"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:enabled="false"
            android:id="@+id/descriptionTextView"
            android:layout_marginHorizontal="20dp"
            android:inputType="textMultiLine"
            android:gravity="left|top"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:text="Course Tags"
            android:textSize="22sp"
            android:textColor="@color/colorPrimary"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:enabled="false"
            android:id="@+id/tagEditView"
            android:layout_marginHorizontal="20dp"
            android:inputType="textMultiLine"
            android:gravity="left|top"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/scheduleSpinner"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="50dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                android:text="Availability"/>



        </LinearLayout>


        <Button
            android:id="@+id/btn_enroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enroll"
            android:textColor="#FFFFFF"
            android:layout_gravity="right"
            android:gravity="center"
            android:layout_marginRight="15dp"
            android:background="@color/colorPrimary"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:paddingVertical="20dp">

            <ImageView
                android:id="@+id/img_teacher_profile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@mipmap/ic_launcher"
                android:layout_marginRight="8dp"/>
            <TextView
                android:id="@+id/tv_about_teacher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img_teacher_profile"
                android:text="I am a professor"
                />
        </RelativeLayout>


    </LinearLayout>

</ScrollView>
