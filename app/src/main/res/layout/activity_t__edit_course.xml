<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kbasa.teaching.teachers.ViewCourseActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <Button
            android:id="@+id/btn_remove"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Reupload Video"
            android:textColor="#FFFFFF"
            android:layout_gravity="right"
            android:gravity="center"
            android:layout_margin="15dp"
            android:background="@color/colorPrimary"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:text="Course Name"
            android:textSize="22sp"
            android:textColor="@color/colorPrimary"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:id="@+id/courseNameTextView"
            android:textSize="20sp"
            android:hint="Enter course name here..."/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:text="Course Description"
            android:textSize="22sp"
            android:textColor="@color/colorPrimary"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/descriptionTextView"
            android:layout_marginHorizontal="20dp"
            android:hint="Enter course description here..."
            android:inputType="textMultiLine"
            android:gravity="left|top"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:text="Available Time"
            android:textSize="22sp"
            android:textColor="@color/colorPrimary"/>








        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="40dp">

            <Button android:id="@+id/myDatePickerButton1"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:text="Date1"
                android:textSize="12sp"/>

            <TextView android:id="@+id/showMyDate1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:textSize="20sp"
                android:layout_marginTop="5dp"/>

            <EditText
                android:id="@+id/hour1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="time"
                android:hint="00"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="20sp"
                android:layout_marginTop="5dp"/>

            <EditText
                android:id="@+id/min1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="time"
                android:hint="00"
                android:textSize="20sp"
                android:layout_marginTop="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="40dp">

            <Button android:id="@+id/myDatePickerButton2"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:text="Date2"
                android:textSize="12sp"/>

            <TextView android:id="@+id/showMyDate2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:textSize="20sp"
                android:layout_marginTop="5dp"/>

            <EditText
                android:id="@+id/hour2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="time"
                android:hint="00"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="20sp"
                android:layout_marginTop="5dp"/>

            <EditText
                android:id="@+id/min2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="time"
                android:hint="00"
                android:textSize="20sp"
                android:layout_marginTop="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="40dp">

            <Button android:id="@+id/myDatePickerButton3"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:text="Date3"
                android:textSize="12sp"/>

            <TextView android:id="@+id/showMyDate3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:textSize="20sp"
                android:layout_marginTop="5dp"/>

            <EditText
                android:id="@+id/hour3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="time"
                android:hint="00"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="20sp"
                android:layout_marginTop="5dp"/>

            <EditText
                android:id="@+id/min3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="time"
                android:hint="00"
                android:textSize="20sp"
                android:layout_marginTop="5dp"/>
        </LinearLayout>







        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:text="Tags"
            android:textSize="22sp"
            android:textColor="@color/colorPrimary"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:id="@+id/tagTextView"
            android:hint="Please separate tags with ','"
            android:gravity="left|top"/>


        <Button
            android:id="@+id/btn_save"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Save Changes"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@color/colorPrimary"/>


    </LinearLayout>

</ScrollView>
